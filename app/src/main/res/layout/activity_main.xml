<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity"
>

    <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Quantity"
            android:textAllCaps="true"
            android:layout_alignParentTop="true"


    />

    <Button
            android:id="@+id/increment_button_view"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_toRightOf="@id/value_of_quantity_text_view"
            android:layout_below="@id/quantity_text_view"
            android:text="+"
            android:onClick="increment"
    />

    <TextView
            android:id="@+id/value_of_quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity_text_view"
            android:layout_toRightOf="@id/decrement_button_view"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="1"
            tools:ignore="HardcodedText"
    />

    <Button
            android:id="@+id/decrement_button_view"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_below="@id/quantity_text_view"
            android:text="-"
            android:onClick="decrement"
    />

    <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/decrement_button_view"
            android:textSize="16sp"
            android:text="Order Summary"
            android:textAllCaps="true"
    />

    <TextView
            android:id="@+id/order_summary_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_text_view"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="Total: $5 \nThank you!"
    />

    <Button
            android:id="@+id/order_button_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_summary_text_view"
            android:text="Order"
            android:onClick="submitOrder"
    />

</RelativeLayout>